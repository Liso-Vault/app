# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Builds the iOS app for release (IPA file)"
  lane :deploy do |options|
    UI.message("Building Flutter iOS release...")
    sh "flutter build ios --release"

    UI.message("Building iOS IPA file...")
    build_ios_app(
      scheme: "Runner",
      configuration: "Release",
      silent: true,
      clean: true,
      output_directory: "build/fastlane/ipa",
      output_name: "Runner.ipa",
      export_method: "app-store" # Ù„Ùˆ Ø¨ØªØ¨Ù†ÙŠ Ù„Ù€ TestFlight Ø£Ùˆ App Store
    )

    UI.success("iOS IPA built successfully and located at: build/fastlane/ipa/Runner.ipa ðŸŽ‰")
  end
end
